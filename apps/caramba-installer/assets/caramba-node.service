[Unit]
Description=Caramba VPN Node
After=network.target
Before=sing-box.service

[Service]
Type=simple
User=root
WorkingDirectory=/opt/caramba
ExecStart=/opt/caramba/caramba-node
Restart=always
RestartSec=10s
EnvironmentFile=-/opt/caramba/.env
EnvironmentFile=-/opt/caramba/node.env

[Install]
WantedBy=multi-user.target
